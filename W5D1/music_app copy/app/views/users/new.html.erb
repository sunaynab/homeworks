
<header>New User</header>
  <body>

    <p>If you would like to create an account please fill out the form below:</p>

    <form action=" <%= user_url %> " method = "post">

      <%= render 'shared/prevent_forgery' %>

      <label for="email">Email:</label>
      <input id="email" type="text" name="user[email]">

      <label for="password">Password:</label>
      <input id="password" type="password" name="user[password]">

      <input type="submit" value="Submit">

    </form>

  </body>
